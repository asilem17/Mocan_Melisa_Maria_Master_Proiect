@model IEnumerable<Mocan_Melisa_MariaMVC.Models.AdoptionRequest>

@{
    ViewData["Title"] = "Index";
}

<h1>Adoption requests</h1>

<p>
    <a asp-action="Create">Create new</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Desired pet type</th>
            <th>
                Minimum age months
            </th>
            <th>
                Maximul age months
            </th>
            <th>
                Desired size
            </th>
            <th>
                User name
            </th>
            <th>
                Pet name
            </th>
            <th>
                Request date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DesiredPetType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinAgeMonths)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxAgeMonths)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DesiredSize)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Email)
            </td>
             <td>
                    @if (item.Pet == null)
                    {
                        <span>Any pet available</span>
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.Pet.PetName)
                    }
             </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequestDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
