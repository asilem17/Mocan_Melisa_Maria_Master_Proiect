@model Mocan_Melisa_MariaMVC.Models.AdoptionRequest

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Desired pet type
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DesiredPetType)
        </dd>
        <dt class = "col-sm-2">
            Minimum age months
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MinAgeMonths)
        </dd>
        <dt class = "col-sm-2">
            Maximum age months
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaxAgeMonths)
        </dd>
        <dt class = "col-sm-2">
            Desired size
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DesiredSize)
        </dd>
        <dt class = "col-sm-2">
            User email
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd>
        <dt class = "col-sm-2">
            Pet name
        </dt>
        <dd class="col-sm-10">
            @if (Model.Pet == null)
            {
                <span>Any pet available</span>
            }
            else
            {
                @Html.DisplayFor(model => model.Pet.PetName)
            }
        </dd>
        <dt class = "col-sm-2">
            Request date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RequestDate)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to list</a>
    </form>
</div>
